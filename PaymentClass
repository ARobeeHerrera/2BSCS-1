package Seatwork1;

public class PaymentClass {
    public static void main(String[] args) {
        Order order = new Order("Keyboard", 10, 300.0);
        System.out.println("Order item is " + order.getItem());
        System.out.println("Unit price is " + order.getUnitPrice());
        System.out.println("Quantity is " + order.getQuantity());


        order.setPaymentSpecific(new Gcash());
        order.setTotalAmount();
        System.out.println("\nPayment method if "  + order.getPaymentSpecific().getClass().getSimpleName());
        System.out.println("Discount rate is " + order.getPaymentSpecific().determineDiscountRate());
        System.out.println("Total Amount is " + order.getTotalAmount());


        order.setPaymentSpecific(new Paymaya());
        order.setTotalAmount();
        System.out.println("\nPayment method if "+ order.getPaymentSpecific().getClass().getSimpleName());
        System.out.println("Discount rate is " + order.getPaymentSpecific().determineDiscountRate());
        System.out.println("Total Amount is " + order.getTotalAmount());



        order.setPaymentSpecific(new Shopee());
        order.setTotalAmount();
        System.out.println("\nPayment method if "+ order.getPaymentSpecific().getClass().getSimpleName());
        System.out.println("Discount rate is " + order.getPaymentSpecific().determineDiscountRate());
        System.out.println("Total Amount is " + order.getTotalAmount());

    }
}
